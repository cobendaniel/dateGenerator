import numpy as np

start_year = 2011
end_year = 2019

class dateGenerator:
    month_storage = []
    quarter_storage = []

    def __init__(self, start_year, end_year):
        self.start_year = start_year
        self.end_year = end_year

    def main(self):
        self.yearGenerator()
        self.monthGenerator()
        self.quarterGenerator()
        self.halfGenerator()

    def yearGenerator(self):
        self.year_list = list(range(start_year, end_year + 1))

    def monthGenerator(self):
        self.month_list = list(range(1, 13))
        np.random.shuffle(self.month_list)

    def quarterGenerator(self):
        self.quarter_list = list(range(1, 5))
        np.random.shuffle(self.quarter_list)
    
    def yearMonthGenerator(self):
        self.monthYear = []

        for i in self.year_list:
            for (a, b) in enumerate(self.month_list):
                if b == self.month_list[0]:
                    self.monthYear.append(i)
                    self.monthYear.append(i)
                    dateGenerator.month_storage.append(b)
                    dateGenerator.month_storage.append([self.month_list[a], self.month_list[a + 1]])
                elif b!= self.month_list[-1]:
                    self.monthYear.append(i)
                    dateGenerator.month_storage.append([self.month_list[a], self.month_list[a + 1]])

    def yearQuarterGenerator(self):
        self.quarterYear = []

        for i in self.year_list:
            for (a, b) in enumerate(self.quarter_list):
                if b == self.quarter_list[0]:
                    self.quarterYear.append(i)
                    self.quarterYear.append(i)
                    dateGenerator.quarter_storage.append(b)
                    dateGenerator.quarter_storage.append([self.quarter_list[a], self.quarter_list[a + 1]])
                elif b != self.quarter_list[-1]:
                    self.quarterYear.append(i)
                    dateGenerator.quarter_storage.append([self.quarter_list[a], self.quarter_list[a + 1]])

class extendedDateGenerator(dateGenerator):
    half_storage = []

    def __init__(self, *args):
        super().__init__(*args)

    def main_v2(self):
        self.halfGenerator()
        self.yearHalfGenerator()

    def halfGenerator(self):
        self.half_list = list(range(1, 3))
        np.random.shuffle(self.half_list)
        
    def yearHalfGenerator(self):
        self.halfYear = []

        for i in self.year_list:
            for j in self.half_list:
                self.halfYear.append(i)
                extendedDateGenerator.half_storage.append(j)

edg = extendedDateGenerator(2014, 2020)
edg.main()
edg.main_v2()
edg.yearHalfGenerator()
edg.yearMonthGenerator()
edg.yearQuarterGenerator()
